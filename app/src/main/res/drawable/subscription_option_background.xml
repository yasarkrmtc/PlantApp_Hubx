<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_background" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="@color/selected_border" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/unselected_background" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="@color/unselected_border" />
        </shape>
    </item>
</selector>
